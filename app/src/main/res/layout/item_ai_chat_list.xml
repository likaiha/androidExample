<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">


    <RelativeLayout
        android:id="@+id/chatting_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <com.android.library.YLCircleImageView
            android:id="@+id/chatting_liv_avatar"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@mipmap/iv_error"
            app:radiusYL="@dimen/dp_19" />
        <!--        <de.hdodenhof.circleimageview.CircleImageView-->
        <!--            android:id="@+id/chatting_liv_avatar"-->
        <!--            android:layout_width="38dp"-->
        <!--            android:layout_height="38dp"-->
        <!--            android:layout_alignParentTop="true"-->
        <!--            android:focusable="false"-->
        <!--            android:src="@mipmap/iv_head" />-->

        <LinearLayout
            android:id="@+id/chatting_lframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="55dp"
            android:layout_toEndOf="@+id/chatting_liv_avatar"
            android:background="@drawable/bg_round_10dp_theme_3d4042"
            android:gravity="center"
            android:minWidth="60dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/chatting_liv_img"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_110"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center"
                    tools:src="@mipmap/iv_placeholder" />

                <TextView
                    android:id="@+id/chatting_ltv_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="start"
                    android:singleLine="false"
                    android:text="@string/app_name"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chatting_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <!--        <de.hdodenhof.circleimageview.CircleImageView-->
        <!--            android:id="@+id/chatting_riv_avatar"-->
        <!--            android:layout_width="38dp"-->
        <!--            android:layout_height="38dp"-->
        <!--            android:layout_alignParentTop="true"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:focusable="false"-->
        <!--            android:src="@mipmap/iv_head" />-->
        <com.android.library.YLCircleImageView
            android:id="@+id/chatting_riv_avatar"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/iv_compile"
            app:radiusYL="@dimen/dp_19" />

        <LinearLayout
            android:id="@+id/chatting_rframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/chatting_riv_avatar"
            android:background="@drawable/bg_round_10dp_theme_3d4042"
            android:gravity="center"
            android:minWidth="60dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/chatting_riv_img"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_110"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="center"
                    android:visibility="visible"
                    tools:src="@mipmap/iv_placeholder" />

                <TextView
                    android:id="@+id/chatting_rtv_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="end"
                    android:singleLine="false"
                    android:text="@string/app_name"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
