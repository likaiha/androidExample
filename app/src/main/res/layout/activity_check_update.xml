<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.mine.activity.ModifyPasswordActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_modify_password_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ae2b2b"
        app:leftIcon="@mipmap/iv_back_w"
        app:title="检查更新"
        app:titleColor="@color/white"
        app:titleSize="@dimen/sp_16"
        app:titleStyle="bold"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_64"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="当前版本号:v1.0.3"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_round_23dp_theme_2b2b2b"
            android:gravity="center"
            android:text="更新"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_FFFFFF"
            />
    </RelativeLayout>


</LinearLayout>